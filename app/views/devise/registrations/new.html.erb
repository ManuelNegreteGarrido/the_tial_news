<div class="row">
  <div class="col-lg-6">

    <h2>Crear cuenta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :name, "Nombre", class: "form-label mb-2" %>
        <%= f.text_field :name, autofocus: true, class: "form-control"%>
      </div>

      <div class="field mb-3">
        <%= f.label :email, "Correo", class: "form-label mb-2" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, "Contraseña", class: "form-label mb-2" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3 form-check">  
        <%= f.check_box :admin, class: "form-check-input" %>
        <%= f.label :admin, "¿Eres un administrador? (Esto no deberia estar aqui, es solo con fines demostratvios)", class: "form-check-label mb-2" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Crear", class: "btn btn-primary mb-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

 </div>
</div>
